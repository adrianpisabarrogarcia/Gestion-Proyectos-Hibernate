<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.ProyectosEntity" table="proyectos" schema="gestionproyectos">
        <id name="id">
            <column name="id" sql-type="int(255)"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="ciudad">
            <column name="ciudad" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>